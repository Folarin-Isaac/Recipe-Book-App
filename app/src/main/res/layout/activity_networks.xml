<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Networks">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/ellipse_icon"
        android:layout_marginStart="20dp"
        android:src="@drawable/arrow_icon"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/networks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Networks"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toRightOf="@id/image1"
        android:textSize="20dp"
        android:textColor="#0A0A0A"
        app:layout_constraintTop_toTopOf="parent"/>



   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintLeft_toRightOf="@id/networks"
       android:layout_marginTop="30dp"
       android:background="@drawable/logo_icon"
       android:layout_marginEnd="30dp"
       android:layout_marginRight="30dp"/>



        <EditText
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="@drawable/button_round"
            app:layout_constraintTop_toBottomOf="@id/networks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:drawableRight="@drawable/ic_search_lens"
            android:drawableEnd="@drawable/ic_search_lens"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:drawablePadding="50dp"
            android:id="@+id/search"
            android:layout_marginRight="10dp"
            android:hint="Search Networks"
            android:paddingLeft="20dp"
            android:textSize="15sp"/>
     <TextView
         android:id="@+id/joined"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toStartOf="parent"
         android:text="Networks you joined"
         android:textSize="18dp"
         android:layout_marginTop="20dp"
         android:layout_marginStart="10dp"
         android:layout_marginLeft="10dp"
         android:textColor="#34A853"
         app:layout_constraintTop_toBottomOf="@id/search"/>



    <LinearLayout
        android:id="@+id/sausage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/joined">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/sausage"
            android:paddingTop="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sausage"
            android:textSize="15dp"
            android:textColor="#0A0A0A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peppers"
            android:textSize="15dp"
            android:textColor="#0A0A0A"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textSize="15dp"
            android:textColor="#0A0A0A"/>

    </LinearLayout>
    </LinearLayout>


  <LinearLayout
      android:id="@+id/strawberry_wonders"
      android:layout_width="0dp"
      android:layout_height="100dp"
      android:background="#FFFFFF"
      android:layout_marginStart="5dp"
      android:layout_marginLeft="5dp"
      android:layout_marginEnd="10dp"
      android:layout_marginRight="10dp"
      app:layout_constraintStart_toStartOf="@id/guideline"
      app:layout_constraintTop_toBottomOf="@id/joined"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="15dp">

      <ImageView
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:paddingLeft="0dp"
          android:paddingTop="0dp"
          android:layout_marginTop="15dp"
          android:paddingBottom="0dp"
          android:layout_marginLeft="10dp"
          android:layout_marginBottom="15dp"
          android:layout_marginStart="10dp"
          android:src="@drawable/strawberry"/>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="70dp"
       android:orientation="vertical"
       android:layout_marginLeft="10dp"
       android:layout_marginStart="10dp"
       android:layout_marginTop="15dp"
       android:layout_marginBottom="15dp">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Strawberry"
           android:textColor="#0A0A0A"
           android:textSize="15dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Wonders"
           android:textColor="#0A0A0A"
           android:textSize="15dp"/>

   </LinearLayout>
  </LinearLayout>

    <LinearLayout
        android:id="@+id/pro_bros"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/sausage"
        app:layout_constraintEnd_toEndOf="@id/guideline">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="0dp"
            android:src="@drawable/pro_bros"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pro-bros"
                android:textColor="#0A0A0A"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/colours"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/strawberry_wonders">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/colors_of_strawberry"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colours of"
                android:textColor="#0A0A0A"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strawberry"
                android:textSize="15dp"
                android:textColor="#0A0A0A"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/food"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/pro_bros"
        app:layout_constraintEnd_toEndOf="@id/guideline">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/food"
            android:layout_marginTop="15dp"
            android:paddingTop="0dp"
            android:paddingLeft="0dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

         <LinearLayout
             android:layout_width="80dp"
             android:layout_height="70dp"
             android:layout_marginTop="15dp"
             android:orientation="vertical"
             android:layout_marginBottom="15dp"
             android:layout_marginStart="10dp"
             android:layout_marginLeft="10dp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#0A0A0A"
                 android:text="Food"
                 android:textSize="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="fitfam"
                android:textColor="#0A0A0A"/>

         </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/veges"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/colours"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="5dp">

         <ImageView
             android:layout_width="70dp"
             android:layout_height="70dp"
             android:src="@drawable/veges"
             android:paddingBottom="0dp"
             android:paddingTop="0dp"
             android:layout_marginStart="10dp"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="15dp"
             android:layout_marginBottom="15dp"/>


          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginTop="15dp"
              android:orientation="vertical"
              android:layout_marginLeft="10dp">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Veges"
                  android:textSize="15dp"
                  android:textColor="#0A0A0A"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Gang"
                  android:textSize="15dp"
                  android:textColor="#0A0A0A"/>
          </LinearLayout>

    </LinearLayout>

   <com.google.android.material.floatingactionbutton.FloatingActionButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/veges"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="10dp"
       android:layout_marginRight="10dp"
       android:id="@+id/fab"
       android:backgroundTint="@color/floatingButton"
       android:src="@drawable/plus"/>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/guideline"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/veges"
        android:layout_marginTop="80dp"
        android:text="Explore new networks"
        android:textSize="15dp"
        android:textColor="#34A853"
        android:hint="Underline color change"
        android:backgroundTint="#34A853"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>